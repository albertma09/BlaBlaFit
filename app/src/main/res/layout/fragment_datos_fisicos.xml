<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recupera_Contrasenya"
    android:background="@color/blablafit">

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="230dp"
        android:layout_height="46dp"
        android:background="@drawable/borde_edit_text"
        android:gravity="center"
        android:hint="Altura (cm)"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="299dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="230dp"
        android:layout_height="46dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/borde_edit_text"
        android:gravity="center"
        android:hint="Peso (Kg)"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <EditText
        android:id="@+id/editTextTextPersonName1"
        android:layout_width="230dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/borde_edit_text"
        android:gravity="center"
        android:hint="Edad"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@drawable/borde_boton"
        android:text="@string/btn_enviar"
        app:backgroundTint="@color/butoncolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName1" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-4dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="57dp"
        android:layout_height="108dp"
        android:src="@drawable/chica"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="106dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="57dp"
        android:layout_height="108dp"
        android:src="@drawable/chico"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="106dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="202dp"
        tools:layout_editor_absoluteY="225dp" >

    </RadioGroup>

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="61dp"
        android:layout_height="46dp"
        android:text="H"
        android:textColor="#616161"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="223dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="52dp"
        android:text="M"
        app:layout_constraintBottom_toBottomOf="@+id/radioButton2"
        app:layout_constraintStart_toEndOf="@+id/radioButton2" />

</androidx.constraintlayout.widget.ConstraintLayout>